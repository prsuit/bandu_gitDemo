<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_camera_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="相机"
        android:textColor="@color/blue_text" />

    <View
        android:id="@+id/stroke_camera_photo"
        style="@style/stroke"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/btn_camera_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="摄像机"
        android:textColor="@color/blue_text" />

    <View
        android:id="@+id/stroke_camera_video"
        style="@style/stroke"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/btn_record_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="录音"
        android:textColor="@color/blue_text" />

    <View
        android:id="@+id/stroke_record_audio"
        style="@style/stroke"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/btn_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="文档"
        android:textColor="@color/blue_text" />

    <View
        android:id="@+id/stroke_file"
        style="@style/stroke"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/black"
        android:text="取消" />

</LinearLayout>
