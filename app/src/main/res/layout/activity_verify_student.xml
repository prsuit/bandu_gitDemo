<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.bandu.talk.android.phone.activity.VerifyStudentActivity"
    android:background="@color/white">

    <include
        layout="@layout/layout_title"/>

    <ListView
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:id="@+id/lv_students"
        android:layout_below="@+id/title_rl"
        android:layout_above="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/v_line"
        android:layout_above="@+id/ll_click"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/line"/>
    <LinearLayout
        android:id="@+id/ll_click"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:background="@drawable/selector_white_gray"
            android:id="@+id/tv_selectall"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:text="全选"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:background="@drawable/selector_white_gray"
            android:id="@+id/tv_selectnotall"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:text="取消全选"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:background="@drawable/selector_white_gray"
            android:id="@+id/tv_access"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:text="通过"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:background="@drawable/selector_white_gray"
            android:id="@+id/tv_refuse"
            android:textSize="18sp"
            android:textColor="@color/delete_red"
            android:text="拒绝"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
