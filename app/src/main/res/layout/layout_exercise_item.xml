<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <LinearLayout
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">



        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:id="@+id/iv_exericise_delete"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/selector_exercises_delete"/>

        <ImageView
            android:id="@+id/iv_lefticon"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lefticon1"/>

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:id="@+id/tv_exericise_name"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/tv_exericise_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_dark_gray"
                    android:gravity="right"
                    android:id="@+id/tv_exericise_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:layout_weight="1"
                android:textColor="@color/text_dark_gray"
                android:id="@+id/tv_exericise_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="北京人教版"/>

            <LinearLayout
                android:id="@+id/ll_exericises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
