<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_green_layout"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="填写姓名并选择角色"
        android:textColor="@color/black"
        android:textSize="@dimen/content_textsize_30"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textColor="@color/light_black"
            android:textSize="@dimen/content_textsize_16"/>

        <EditText
            android:id="@+id/name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv2"
            android:background="@null"
            android:hint="请输入你的姓名"
            android:textColorHint="@color/text_gray"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="角色"
            android:textColor="@color/light_black"
            android:textSize="@dimen/content_textsize_16"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/tv4"
            android:src="@drawable/warning"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img"
            android:gravity="center_vertical"
            android:text="选定角色后不能修改哦！"
            android:textColor="@color/orange"
            android:textSize="@dimen/content_textsize_14"/>

            <TextView
                android:layout_below="@+id/tv3"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv4"
                android:id="@+id/student_tv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/back_select_round"
                android:text="学生"
                android:gravity="center"
                android:textColor="@color/student_color"
                android:textSize="@dimen/content_textsize_18"/>

            <TextView
                android:layout_below="@+id/tv3"
                android:id="@+id/teacher_tv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/student_tv"
                android:layout_marginLeft="20dp"
                android:background="@drawable/back_select_round1"
                android:gravity="center"
                android:text="老师"
                android:textColor="@color/teacher_color"
                android:textSize="@dimen/content_textsize_18"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/gray"/>

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_login_button_green"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/title_textsize"/>


</LinearLayout>
