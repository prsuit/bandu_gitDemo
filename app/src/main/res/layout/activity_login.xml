<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/ivTest"
            android:layout_width="140dp"
            android:layout_height="59.5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accounts"
                android:textColor="@color/light_black"
                android:textSize="@dimen/content_textsize_16"/>

            <EditText
                android:id="@+id/phone_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@null"
                android:singleLine="true"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor"
                android:textColor="@color/black"
                android:hint="@string/accout_input_hint"
                android:textColorHint="@color/text_gray"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:layout_centerVertical="true"
                android:textColor="@color/light_black"
                android:textSize="@dimen/content_textsize_16"/>

            <EditText
                android:layout_toRightOf="@+id/tv1"
                android:id="@+id/pass_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor"
                android:background="@null"
                android:hint="@string/pass_input_hint"
                android:textColorHint="@color/text_gray"/>

            <ImageView
                android:id="@+id/pass_img"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/invisiable"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/back_login_button_green"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/title_textsize"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/no_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/forget_pass"
                android:textColor="@color/blue"
                android:textSize="@dimen/content_textsize_18"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/regist_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/use_btn"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back_login_button_green"
        android:text="@string/regist"
        android:textColor="@color/white"
        android:textSize="@dimen/title_textsize"/>

    <Button
        android:id="@+id/use_btn"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/white_login_button"
        android:text="@string/use_right_now"
        android:textColor="@color/gray"
        android:textSize="@dimen/title_textsize"/>

</RelativeLayout>