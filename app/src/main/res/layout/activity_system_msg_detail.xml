<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="me.bandu.talk.android.phone.activity.SystemMsgDetailActivity">
    <include layout="@layout/title_green_layout"
        android:id="@+id/head_layout"/>
    <TextView
        android:id="@+id/title"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/head_layout"
        android:text="标题标题标题"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="@dimen/content_textsize_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/time_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="2015-03-14"
        android:textColor="@color/text_dark_gray"
        android:textSize="@dimen/text_size12"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<ScrollView
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_below="@+id/time_tv"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@color/text_dark_gray"
        android:id="@+id/content_tv"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="内容"
        android:textSize="@dimen/content_textsize_14"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</ScrollView>
</RelativeLayout>
