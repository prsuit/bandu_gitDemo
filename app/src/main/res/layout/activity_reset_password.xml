<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_green_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textColor="@color/light_black"
            android:textSize="@dimen/content_textsize_14"/>

        <EditText
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/test_cursor"
            android:layout_toRightOf="@+id/tv2"
            android:id="@+id/phone_edt"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:textSize="@dimen/content_textsize_14"
            android:textColor="@color/black"
            android:hint="@string/input_phone_hint"
            android:textColorHint="@color/text_gray"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/identifying_code"
            android:textColor="@color/light_black"
            android:textSize="@dimen/content_textsize_14"/>

        <EditText
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/test_cursor"
            android:id="@+id/code_edt"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv1"
            android:textSize="@dimen/content_textsize_14"
            android:textColor="@color/black"
            android:background="@null"
            android:hint="@string/input_code"
            android:textColorHint="@color/text_gray"/>

        <TextView
            android:id="@+id/code_tv"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_selector"
            android:text="@string/get_code"
            android:textColor="@color/white"
            android:textSize="@dimen/content_textsize_14"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:layout_centerVertical="true"
            android:textColor="@color/light_black"
            android:textSize="@dimen/content_textsize_14"/>

        <EditText
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/test_cursor"
            android:layout_toRightOf="@+id/tv3"
            android:id="@+id/pass1_edt"
            android:textSize="@dimen/content_textsize_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="@string/pass_input_hint_info"
            android:textColorHint="@color/text_gray"/>
        <ImageView
            android:id="@+id/pass_img"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/invisiable"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/gray"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_login_button_green"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/title_textsize"
        android:layout_marginLeft="20dp"/>


</LinearLayout>
