<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_gray"
    tools:context=".activity.PersonalCenterActivity">

    <include layout="@layout/title_green_layout"
        android:id="@+id/title"/>

    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head_rl">
            <ImageView
                android:id="@+id/head"
                android:src="@drawable/ic_launcher"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/head"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/title_textsize"
                android:id="@+id/name"
                android:text="阿Q老师"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/light_black"
                android:textSize="@dimen/content_textsize_14"
                android:text="天坛东里小学"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/test_goright"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <TextView
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/sys_rl">

            <TextView
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_textsize_18"
                android:textColor="@color/light_black"
                android:text="@string/sys_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/test_goright"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <TextView
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/modify_pass_rl">
            <TextView
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_textsize_18"
                android:textColor="@color/light_black"
                android:text="@string/modify_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/test_goright"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <TextView
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/download_rl">
            <TextView
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_textsize_18"
                android:textColor="@color/light_black"
                android:text="下载管理"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/test_goright"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/switch_img"/>
        </RelativeLayout>
        <TextView
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/bind_rl"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_textsize_18"
                android:textColor="@color/light_black"
                android:text="家长绑定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/test_goright"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <TextView
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/feedback_rl">
            <TextView
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_textsize_18"
                android:textColor="@color/light_black"
                android:text="意见反馈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/test_goright"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <TextView
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/us_rl">
            <TextView
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_textsize_18"
                android:textColor="@color/light_black"
                android:text="关于我们"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/test_goright"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <TextView
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <Button
            android:layout_marginLeft="15dp"
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/back_exit_button_red"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="@dimen/title_textsize"/>
    </LinearLayout>



</RelativeLayout>
